{% extends "_layout" %}
{% set title = "Blogs" %}
{% block main %}
<div class="uk-section uk-section-small uk-container uk-container-medium">

  {% set entries = craft.entries().section('blogs').limit('24').all() %}
  {% if entries|length %}
    <ul class="uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-child-width-1-5@xl uk-grid-match uk-grid-medium" data-uk-grid>
      {% for entry in entries %}
        <li>
          <div class="uk-card uk-card-games uk-card-border uk-card-body uk-card-small uk-card-hover uk-border-rounded uk-link-reset">

            <a href="{{ entry.url }}">{{ entry.title }}</a>

          </div>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  <div class="uk-grid-medium" data-uk-grid>
	<div class="uk-width-expand">
		<div class="ajaxLoaderPost uk-grid-medium uk-grid-match" data-uk-grid></div>

	</div>
	<div class="uk-width-1-4">






</div>
{% endblock %}
